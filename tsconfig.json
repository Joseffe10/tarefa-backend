{
   "compilerOptions": {
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
     "target": "es2017",
     "module": "commonjs",
     "allowJs": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "rootDir": "./",
     "outDir": "./dist",
     "resolveJsonModule": true,
     "removeComments": false,
     "noEmit": false,
     "typeRoots": [
       "./node_modules/@types",
       "src/@types"
     ]
   },
   "include": [
     "src/**/*.ts",
     "src",
     "src/index.ts"
   ]
 }